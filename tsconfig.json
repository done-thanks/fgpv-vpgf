{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./node_modules",
        "target": "ES2016",
        "paths": {
            "api/*": ["../api/src/*"],
            "app/*": ["../src/app/*"]
          },
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    }
}